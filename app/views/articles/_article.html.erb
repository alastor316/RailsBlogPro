<div class="col-12 col-sm-6 col-md-4 col-lg-3 article-salto">
    <div class="card h-100 article-container ">
        <%= link_to article do %>
            <div style="" class="card-body" >
                <%= image_tag article.cover(:thumb),class:"card-img-top" %>
                <h2 class="card-title text-center h2color" <%= link_to  truncate(article.title, length:15), article %></h2>
                <p><%=truncate_html(article.body.html_safe, length: 120) %></p>
        <%end%>  
                <%temporal = "Categorias: "%>
                <% article.categories.each do |category| %>      
                    <%temporal =   "#{temporal}  #{category.name}"%>
                <%end%>      
                <p> <%= temporal%> </p>   
            </div>
         
    </div> 
</div>