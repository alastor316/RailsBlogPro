<div class="col-12 col-sm-6 col-md-4 col-lg-3 article-salto">
    <div class="card h-100 article-container">
        <div style="" class="card-body">
            <%= image_tag article.cover(:thumb),class:"card-img-top" %>
            <h2 class="card-title"><%= link_to  truncate(article.title, length:20), article %></h2>
            <p><%=truncate_html(article.body.html_safe, length: 150) %></p>
            <%temporal = "Categorias: "%>
            <% article.categories.each do |category| %>      
                <%temporal =   "#{temporal}  #{category.name}"%>
            <%end%>      
            <p> <%= temporal%> </p>   
        </div>
    </div> 
</div>