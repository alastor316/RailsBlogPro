<div class="jumbotron search-jumbotron">
    <div class="row search-body">
        <% if ! @articles.blank? %>
            <% @articles.each do |art| %>
                <div class="col-md-6 search-fondo search-body">
                    <div class="">
                        <h1><%= link_to  art.title, art, class:"search-title" %></h1>
                        <p class=""><%= truncate_html(art.body, length:200) %></p>
                        <p class="text-right"><%= link_to  "Ver mas", art, class:"btn btn-success" %></p>  
                    </div>
                </div>
            <%end%>        
        <%else%>
            <div class="col-md-10 offset-md-1">        
                <h1 class="text-center">Lo siento...</h1>
                <p class="text-center">No se encuentran concidencias con <%="\"#{params[:titulo]}\""%></p>
            </div>
        <%end%>           
    </div>
</div>